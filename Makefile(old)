################################################################################
#                                     CONFIG                                   #
################################################################################

NAME        := minishell
SRCS = Main.c
CC        := cc
CFLAGS    := -Wall -Wextra -g -Werror
LIBFT_DIR = ./libft
LIBFT = $(LIBFT_DIR)/libft.a
LDFLAGS = -L$(LIBFT_DIR) -lft -lreadline
################################################################################
#                                 PROGRAM'S SRCS                               #
################################################################################

SRCS_LIBFT        :=      libft/ft_memmove.c \
                          libft/ft_strteri.c \
                          libft/ft_toupper.c \
                          libft/ft_strchr.c \
                          libft/ft_atol.c \
                          libft/ft_strlen.c \
                          libft/ft_putstr_fd.c \
                          libft/ft_putchar_fd.c \
                          libft/ft_tolower.c \
                          libft/ft_memcpy.c \
                          libft/ft_isalnum.c \
                          libft/ft_isprint.c \
                          libft/ft_putnbr_fd.c \
                          libft/ft_substr.c \
                          libft/ft_isalpha.c \
                          libft/ft_strncmp.c \
                          libft/ft_strjoin.c \
                          libft/ft_strrchr.c \
                          libft/ft_lstadd_front.c \
                          libft/ft_lstiter.c \
                          libft/ft_calloc.c \
                          libft/ft_lstadd_back.c \
                          libft/ft_strmapi.c \
                          libft/ft_lstclear.c \
                          libft/ft_memchr.c \
                          libft/ft_isdigit.c \
                          libft/ft_strlcat.c \
                          libft/ft_isascii.c \
                          libft/ft_strreverse.c \
                          libft/ft_lstmap.c \
                          libft/ft_split.c \
                          libft/ft_putendl_fd.c \
                          libft/ft_lstsize.c \
                          libft/ft_lstlast.c \
                          libft/ft_bzero.c \
                          libft/ft_strtrim.c \
                          libft/ft_strdup.c \
                          libft/ft_lstdelone.c \
                          libft/ft_memcmp.c \
                          libft/ft_itoa.c \
                          libft/ft_atoi.c \
                          libft/ft_strlcpy.c \
                          libft/ft_memset.c \
                          libft/ft_lstnew.c \
                          libft/ft_strnstr.c \
SRCS :=       	Main.c Error.c \

OBJS :=			   $(SRCS:.c=.o)                      
OBJS_LIBFT        := $(SRCS_LIBFT:.c=.o)

.c.o:
	${CC} ${CFLAGS} -c $< -o $@

################################################################################
#                                  Makefile  objs                              #
################################################################################


CLR_RMV		:= \033[0m
RED		    := \033[1;31m
GREEN		:= \033[1;32m
YELLOW		:= \033[1;33m
BLUE		:= \033[1;34m
CYAN 		:= \033[1;36m
RM		    := rm -f

${NAME}:	$(SRCS) $(LIBFT)
			@echo "$(GREEN)Compilation ${CLR_RMV}of ${YELLOW}$(NAME) ${CLR_RMV}..."
			$(CC) $(CFLAGS) $(SRCS) Error.c $(LDFLAGS) -o $(NAME)
			@echo "$(GREEN)$(NAME) created[0m âœ”ï¸"


all:		${NAME}

$(LIBFT):
		make -C $(LIBFT_DIR)

bonus:		all

clean:
			@ ${RM} $(OBJS)
			make -C $(LIBFT_DIR) clean
			@ echo "$(RED)Deleting $(CYAN)$(NAME) $(CLR_RMV)objs âœ”ï¸"

fclean:		clean
			@ ${RM} ${NAME}
			make -C $(LIBFT_DIR) fclean
			@ echo "$(RED)Deleting $(CYAN)$(NAME) $(CLR_RMV)binary âœ”ï¸"

re:			fclean all

.PHONY:		all clean fclean re


